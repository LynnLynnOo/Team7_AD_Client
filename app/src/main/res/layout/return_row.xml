<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#E7F6FA"
        android:layout_marginLeft="@dimen/m_margin"
        android:layout_marginRight="@dimen/m_margin"
        android:layout_marginBottom="@dimen/s_margin"
        android:layout_marginTop="@dimen/s_margin"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/godetail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/l_margin"
                android:layout_margin="@dimen/s_margin"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/nav_header_height"
                    android:layout_marginLeft="5dp"
                    android:text="RequestId"
                    android:textColor="@color/txtColor"
                    android:textSize="18sp" />



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >


                <ImageView
                    android:src="@drawable/ic_point"
                    android:id="@+id/collnn"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/txtColor"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textView3"
                    android:layout_toRightOf="@id/collnn"
                    android:text="DepartmentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>